<div class="flex w-full flex-col items-center space-y-4 sm:items-end mb-2"
     data-controller="flash"
     <% auto_hide = nil if defined?(auto_hide).nil? %>
     <%= "data-flash-auto-hide-value=#{auto_hide}" if defined?(auto_hide) %>
     <%= "data-flash-duration-value=#{duration}" if defined?(duration) %>>
  <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
    <% flash.each do |key, value| %>
      <div class="p-4">
        <div class="flex items-center">
          <div class="flex w-0 flex-1 justify-between">
            <p class="w-0 flex-1 text-sm font-medium <%= color if defined?(color) %>"><%= value %></p>
          </div>
          <div class="ml-4 flex flex-shrink-0">
            <button type="button" data-action="flash#dismiss" class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
