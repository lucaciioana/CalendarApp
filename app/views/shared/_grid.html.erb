<div class="mx-auto max-w-7xl">
  <div class="bg-gray-900 py-10">
    <div class="px-4 sm:px-6 lg:px-8" data-controller="grid">
      <div class="sm:flex sm:items-center flex w-full">
        <div class="sm:flex-auto flex-auto">
          <% unless title.nil? %>
            <h1 class="text-base font-semibold leading-6 text-white"><%= title %></h1>
          <% end %>
          <% unless desc.nil? %>
            <p class="mt-2 text-sm text-gray-300"><%= desc %></p>
          <% end %>
        </div>
        <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none flex flex-row flex-initial">
          <!--          <button type="button" class="block rounded-md bg-indigo-500 px-3 py-2 text-center text-sm font-semibold text-white hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">Add-->
          <!--            user-->
          <!--          </button>-->
          <%= button_to "Add #{title}", { controller: controller_name, action: :new }, method: :get,
                        data: { turbo_frame: 'modal' }, class: 'ml-6 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500' %>
          <%= button_to "Delete", { controller: controller_name, action: 'destroy' },
                        id: 'delete',
                        method: :delete,
                        remote: true,
                        disabled: true,
                        data: { grid_target: 'delete' },
                        form: { id: 'bulk' },
                        class: 'ml-6 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500 disabled:opacity-50' %>
        </div>
      </div>
      <div class="mt-8 flow-root">
        <div class="mx-4 -my-2 overflow-x-auto sm:mx-6 lg:mx-8">
          <div class="inline-block min-w-full h-[600px] py-2 align-middle">
            <table class="min-w-full divide-y divide-gray-700 table-auto max-h-84">
              <thead class="text-3xl font-bold">
              <tr>
                <% if render_checkboxes %>
                  <th scope="col" class="relative w-4 sticky top-0 z-10 dark:bg-gray-900">
                    <%= check_box_tag 'select all',
                                      nil,
                                      nil,
                                      data: {
                                        grid_target: 'parent',
                                        action: 'change->grid#toggleChildren'
                                      },
                                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                  </th>
                <% end %>
                <% headers.each do |header| %>
                  <th scope="col" class="sticky top-0 z-10 dark:bg-gray-900 px-3 py-5 text-left text-gray-900 dark:text-white sm:pl-0">
                    <%= header.to_s.capitalize %></th>
                <% end %>
                <% unless headers.nil? %>
                  <th scope="col" class="relative sticky top-0 z-10 dark:bg-gray-900 py-5 pl-3 pr-4 sm:pr-0">
                    <span class="sr-only">Actions</span>
                  </th>
                <% end %>
              </tr>
              </thead>
              <tbody class="divide-y divide-gray-800">
              <% unless data.nil? %>
                <% data.each do |record| %>
                  <tr>
                    <% if render_checkboxes %>
                      <td class="relative px-3 sm:w-6">
                        <%= check_box_tag 'ids[]',
                                          record.id,
                                          nil,
                                          multiple: true,
                                          form: :bulk,
                                          class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600",
                                          data: {
                                            grid_target: 'child',
                                            action: 'change->grid#toggleParent'
                                          } %>
                      </td>
                    <% end %>
                    <% headers.each do |header| %>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-0"><%= record[header] %></td>
                    <% end %>
                    <% if render_actions %>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-0">
                        <% actions.each do |action, enabled| %>
                          <% if enabled %>
                            <%= action %>
                          <% end %>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


    <% if errors %>
      <% errors.each do |error| %>
        <p class="<%= Theme::THEME_ERROR_STYLING %>"><%= error %></p>
      <% end %>
    <% end %>
  </div>
</div>