<div class="mt-10">
  <h1 class="<%= Theme::THEME_LABEL_STYLING %> text-3xl font-bold mb-6">Forgot your password?</h1>
  <%= form_with(url: auth_password_reset_path) do |form| %>
    <div>
      <%= form.email_field :email, required: true, autofocus: true %>
    </div>

    <div class="mt-2">
      <%= form.submit "Send password reset email" %>
    </div>
  <% end %>
  <div class="mt-10">
    <%= link_to "Back", :back, class: "#{Theme::THEME_LABEL_STYLING}" %>
  </div>
</div>
