<div class="mt-10">
  <h1 class="<%= Theme::THEME_LABEL_STYLING %> text-3xl font-bold mb-6">Activity Log</h1>

  <div id="sessions" class="dark:text-white max-h-[500px] overflow-y-auto grid grid-cols-1 gap-y-4">
    <% @auth_events.each do |event| %>
      <div id="<%= dom_id event %>">
        <p>
          <strong>User Agent:</strong>
          <%= event.user_agent %>
        </p>

        <p>
          <strong>Action:</strong>
          <%= event.action %>
        </p>

        <p>
          <strong>Ip Address:</strong>
          <%= event.ip_address %>
        </p>

        <p>
          <strong>Created at:</strong>
          <%= event.created_at %>
        </p>
      </div>
    <% end %>
  </div>

  <br>

  <div class="mt-10">
    <%= link_to "Back", :back, class: "#{Theme::THEME_LABEL_STYLING}" %>
  </div>
</div>