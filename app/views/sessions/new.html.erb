<div class="mt-10">
  <h1 class="<%= Theme::THEME_LABEL_STYLING %> text-3xl font-bold mb-6">Sign In</h1>

  <%= form_with(url: sign_in_path) do |form| %>
    <div>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= form.password_field :password, required: true, autocomplete: "current-password" %>
    </div>

    <p class="<%= Theme::THEME_ERROR_STYLING %>"><%= notice %></p>
    <p class="<%= Theme::THEME_ERROR_STYLING %>"><%= alert %></p>

    <div class="mt-2">
      <%= form.submit "Sign in" %>
    </div>
  <% end %>

  <div class="flex flex-col mt-10">
    <%= link_to "Sign up", sign_up_path, class: Theme::THEME_ANCHOR_STYLING %>
    <%= link_to "Forgot your password?", new_identity_password_reset_path, class: Theme::THEME_ANCHOR_STYLING %>
    <%#= link_to "Sign in without password", new_sessions_passwordless_path, class: Theme::THEME_ANCHOR_STYLING %>
  </div>
</div>