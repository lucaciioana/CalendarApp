<% title = 'Add Event' %>
<%= render 'shared/modal', title: title do %>
  <%= form_with id: title, model: @event, local: true, data: { controller: 'events' } do |form| %>
    <div class="form-group">
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <!--    <div class="form-group">-->
    <%#= form.text_field :tag, class: "form-control" %>
    <!--    </div>-->
    <div class="form-group">
      <%= form.select :event_type_id, EventType.created_by(Current.user).collect { |et| [et.name, et.id] }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.date_field :date, class: 'color-scheme-dark' %>
    </div>

  <% end %>

  <p class="<%= Theme::THEME_ERROR_STYLING %>"><%= notice %></p>
  <p class="<%= Theme::THEME_ERROR_STYLING %>"><%= alert %></p>

<% end %>